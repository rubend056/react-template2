{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Chrome Launch",
			"request": "launch",
			"type": "pwa-chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Firefox Launch",
			"request": "launch",
			"type": "firefox",
			"reAttach": true,
			"url": "localhost:3000",
			"webRoot": "${workspaceFolder}",
			"pathMappings": [
				{
					"url": "file:///home/rubend/p/react-template/src",
					"path": "${workspaceFolder}/src"
				}
			]
		},
		{
			"name": "Firefox Attach",
			"type": "firefox",
			"url": "localhost:3000",
			"request": "attach"
		}
	]
}